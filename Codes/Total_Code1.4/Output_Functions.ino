
/////// Buzzer /////////////////////////////////////////////////////////////////////////////////////////////////
void buzz(int pwm, int duration, int times) { // Activate buzzer
  for (int i = 0; i < times; i++) {
    analogWrite(4, pwm);
    delay(duration / 2);
    analogWrite(4, 0);
    delay(duration / 2);
  }
}
